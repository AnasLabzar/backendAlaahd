{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./src",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "baseUrl": ".",
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "typeRoots": [
            "./src/types",
            "./node_modules/@types"
        ],
        "types": [
            "node",
            "express"
        ], // Optionally, include the types for Node.js and Express
    },
    "include": [
        "src/**/*"
    ]
}